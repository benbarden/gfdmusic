{% extends 'layouts/base.twig' %}

{% block layout_welcome %}
    <div class="p-4 p-md-5 mb-4 gfd-bg-welcome">
        <div class="gfd-welcome-text col-md-6">
            <h1>Tracks</h1>
            <p>
                A list of all the tracks on the site.
            </p>
        </div>
    </div>
{% endblock layout_welcome %}

{% set TopTitle = "All tracks" %}

{% block page_body %}

    <h3 class="pb-4 mb-4 border-bottom">
        All tracks
    </h3>

    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>Track</th>
                    <th>Artist</th>
                </tr>
            </thead>
            <tbody>
                {% for item in Tracks %}
                    <tr>
                        <td>
                            <a href="{{ route('track.show', {'trackUrl': item.url, 'artistUrl': item.artist.url}) }}">
                                {{ item.name }}
                            </a>
                        </td>
                        <td>
                            <a href="{{ route('artist-profile.show', {'artistUrl': item.artist.url}) }}">
                                {{ item.artist.name }}
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock page_body %}
